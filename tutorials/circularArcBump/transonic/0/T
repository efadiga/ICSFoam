FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 274.9;

boundaryField
{
    INLE1
    {
        type            totalTemperature;
        gamma 		1.4;
        T0              uniform 288.15;
        value           uniform 274.9;
    }

    PRES2
    {
        type            zeroGradient;
    }

    WALL3
    {
        type            zeroGradient;
    }

    WALL4
    {
        type            zeroGradient;
    }

    defaultFaces
    {
        type            empty;
    }
}

